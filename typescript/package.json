{
  "name": "@bitrix-integration-suite/typescript",
  "version": "2.0.0",
  "description": "TypeScript client for Bitrix24 REST API with comprehensive integration tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/ --ext .ts --fix",
    "lint:check": "eslint src/ --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "docs": "typedoc src/index.ts"
  },
  "keywords": [
    "bitrix24",
    "rest-api",
    "crm",
    "dadata",
    "integration",
    "typescript",
    "client"
  ],
  "author": "EvaCoreBot Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "winston": "^3.11.0",
    "joi": "^17.12.1",
    "rate-limiter-flexible": "^4.0.1",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typedoc": "^0.25.7"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm test"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EvaCoreBot/bitrixdock.git",
    "directory": "typescript"
  }
}

